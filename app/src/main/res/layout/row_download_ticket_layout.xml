<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <com.ns.custom.CustomTxtView_ColumbiaSerialLight
        android:id="@+id/row_download_ticket_seatname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="Seat name"
        android:textColor="@color/whight"
        android:textSize="@dimen/txt_18" />

    <com.ns.custom.CustomTxtView_ColumbiaSerialLight
        android:id="@+id/row_download_ticket_guestname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_download_ticket_seatname"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.4"
        android:text="Seat name"
        android:textColor="@color/whight"
        android:textSize="@dimen/txt_15" />

    <ImageView
        android:id="@+id/row_download_ticket_icon"
        android:layout_width="25dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/download_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/row_download_ticket_guestname"
        android:alpha="0.2"
        android:background="@color/colorAddressDivider" />

</RelativeLayout>