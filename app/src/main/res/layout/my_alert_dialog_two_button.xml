<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ns.custom.CustomTxtView_ColumbiaSerialBold
        android:id="@+id/myalert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="@dimen/txt_15" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/myalert_title"
        android:alpha="0.4"
        android:background="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/myalert_twobtn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/columbia_serial_light"
            android:text="Yes" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:background="@color/black" />


        <Button
            android:id="@+id/myalert_twobtn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/columbia_serial_light"
            android:text="No" />

    </LinearLayout>


</RelativeLayout>