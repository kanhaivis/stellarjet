<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_to_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="60dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.ns.custom.CustomTxtView_ColumbiaSerialRegular
            android:id="@+id/from_to_ttitle_Txt"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:alpha="0.5"
            android:letterSpacing="0.05"
            android:maxLines="2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp"
            android:alpha="0.2"
            android:background="@color/colorAddressDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/common_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>
