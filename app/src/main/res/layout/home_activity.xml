<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:layout_marginBottom="16dp">

            <com.ns.custom.CustomTxtView_ColumbiaSerialLight
                android:id="@+id/textView_home_booking_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:textColor="@color/whight"
                android:textSize="@dimen/txt_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ns.custom.CustomTxtView_ColumbiaSerialLight
                android:id="@+id/textView_home_booking_primary_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="16dp"
                android:gravity="center"
                android:textColor="@color/whight"
                android:textSize="@dimen/txt_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_home_booking_for" />

            <ImageButton
                android:id="@+id/button_drawer"
                style="@style/StellarImageButton"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="68dp"
            android:background="@drawable/ic_logo" />

        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/textview_home_hello_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="38dp"
            android:lineSpacingExtra="10dp"
            android:text="@string/home_title_hello_again_dummy"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_28" />

        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/textView_home_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="21dp"
            android:text="@string/app_name"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_26"
            android:visibility="gone" />

        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/textView_home_see_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="38dp"
            android:alpha="0.5"
            android:text="@string/home_see_you_again"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_20"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />


        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/textView_seat_limits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_16" />

        <Button
            android:id="@+id/button_book_flight"
            style="@style/StellarWhiteButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="23dp"
            android:gravity="center_vertical|start"
            android:visibility="gone"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>