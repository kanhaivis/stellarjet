<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/row_addmanager_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_19" />

        <ImageView
            android:id="@+id/row_addmanager_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_addmanager_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/delete" />


        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/row_addmanager_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_addmanager_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:alpha="0.4"
            android:text="name"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/row_addmanager_phone"
            android:layout_marginTop="20dp"
            android:alpha="0.1"
            android:background="@color/colorAddressDivider" />
    </RelativeLayout>


</RelativeLayout>