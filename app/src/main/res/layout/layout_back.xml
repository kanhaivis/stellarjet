<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="15dp"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_boarding_pass_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_home"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/shared_img"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignTop="@+id/button_boarding_pass_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/share_icon"
            android:visibility="gone" />


    </RelativeLayout>

    <com.ns.custom.CustomTxtView_ColumbiaSerialLight
        android:id="@+id/back_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/whight"
        android:textSize="@dimen/txt_20" />
</LinearLayout>