<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <com.ns.custom.CustomTxtView_ColumbiaSerialLight
        android:id="@+id/textView_food_list_row_name"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_date_next"
        android:text="Food"
        android:textColor="@color/whight"
        android:textSize="@dimen/txt_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="@color/colorAddressDivider" />

</LinearLayout>