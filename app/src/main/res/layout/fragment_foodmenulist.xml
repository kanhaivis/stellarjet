<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <com.ns.custom.CustomTxtView_ColumbiaSerialLight
            android:id="@+id/foodmenu_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="2dp"
            android:textColor="@color/whight"
            android:textSize="@dimen/txt_22" />

        <include layout="@layout/common_recyclerview" />

    </LinearLayout>




    <com.ns.custom.CustomButton_ColumbiaSerialRegular
        android:id="@+id/foodmenu_bottom_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/drawable_button_bg"
        android:gravity="start|center_vertical"
        android:letterSpacing="0.05"
        android:padding="10dp"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/colorButtonNew"
        android:textSize="@dimen/txt_22"
        android:visibility="visible" />


</RelativeLayout>