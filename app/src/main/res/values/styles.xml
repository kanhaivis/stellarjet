    <style name="StellarImageButton" parent="android:Widget.Material.ImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="StellarBackButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/ic_back</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">26dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
    </style>

    <style name="BookingsTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/columbia_serial_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
