<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@mipmap/bg</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>


    <style name="StellarTextView_30dp" parent="android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="StellarWhiteButton" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/drawable_button_bg</item>
        <item name="android:textColor">@color/colorButtonNew</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/columbia_serial_regular</item>
        <item name="android:paddingStart">30dp</item>
    </style>


    <style name="StellarEditText" parent="android:Widget.Material.EditText">
        <item name="android:background">@drawable/drawable_edittext_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">50</item>
    </style>



    <style name="StellarTextView_28sp" parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
